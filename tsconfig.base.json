{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["ESNext", "DOM"],
    "paths": { "@components/*": ["./components/*"], "@lib/*": ["./lib/*"] }
  },

  "exclude": ["node_modules", "*/**/dist", "plugins", "*.js", "assets", "build", "scripts"]
}
